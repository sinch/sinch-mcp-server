    "@modelcontextprotocol/sdk": "^1.17.3",
    "@sinch/sdk-core": "^1.3.0",
    "axios": "^1.8.4",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "undici": "^7.9.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.60.0",
    "@eslint/compat": "^1.2.9",
